    "ts-loader": "^9.2.6",
    "ts-node": "^10.4.0",
    "tsconfig-paths": "^3.11.0",
    "tslint-config-airbnb": "^5.11.2",
    "typescript": "^4.0.0"
  },
  "peerDependencies": {
    "jest-mock-extended": "^2.x",
    "reflect-metadata": "^0.1.x",
    "ts-essentials": "^7.x"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --ext .ts --fix"
    ]
