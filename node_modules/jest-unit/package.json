  "files": [
    "dist",
    "index.d.ts",
    "index.js",
    "README.md"
  ],
  "dependencies": {
    "ts-essentials": "^7.0.3"
  },
  "devDependencies": {
    "@commitlint/cli": "^11.0.0",
